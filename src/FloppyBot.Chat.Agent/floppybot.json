{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  
  "ConnectionStrings": {
    "MongoDb": "mongodb://localhost:27017/FloppyBot",
    "Redis": "localhost",
    "HealthCheck": "{Redis}|HealthCheck",
    "KillSwitch": "{Redis}|KillSwitch",
    "MessageOutput": "{Redis}|Message.Received",
    "MessageInput": "{Redis}|Message.Responded.\\{InterfaceType\\}",
    "DistributedCommandRegistry": "{Redis}|FloppyBot.CommandRegistry"
  },

  // Configure Chat Interface
  "InterfaceType": "Mock",

  // Discord only
  "Discord": {
    "ClientId": "~~clientId~~",
    "ClientSecret": "~~clientSecret~~",
    "Token": "~~token~~",
    "Privileges": 339008,
    "CommandPrefix": "-"
  },

  // Twitch only
  "Twitch": {
    "Username": "",
    "Token": "",
    "Channel": "",
    "ClientId": "",
    "AccessToken": "",
    "DisableWhenChannelIsOffline": true,
    "MonitorInterface": 30,
    "AnnounceChannelOnlineStatus": true,
    "EnableTwitchEventSource": false
  }
}
